{
  "engines": {
    "node": ">=20.6.0"
  },
  "name": "rest-api-crud",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev": "node --env-file=.env.development --env-file=.env --watch --watch-preserve-output -r ts-node/register api/server.ts",
    "build": "tsc",
    "start": "node --env-file=.env.production --env-file=.env dist/server.js",
    "seed": "prisma db push --accept-data-loss && ts-node prisma/seed.ts",
    "export:csv": "ts-node prisma/exportCSV.ts",
    "test:old": "jest --detectOpenHandles",
    "test:watch": "jest --watchAll  --detectOpenHandles",
    "test": "dotenvx run -f .env.test -- npm run docker:up && npx prisma migrate deploy && jest -i",
    "docker:build-dev": "docker compose -f docker-compose.dev.yml build --build-arg BUILD=1",
    "docker:up-dev": "docker compose -f docker-compose.dev.yml up",
    "docker:down-dev": "docker compose -f docker-compose.dev.yml down",
    "docker:build-prod": "docker compose -f docker-compose.prod.yml build --build-arg BUILD=1",
    "docker:up-prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down-prod": "docker compose -f docker-compose.prod.yml down"
  },
  "keywords": [
    "rest",
    "api",
    "crud"
  ],
  "author": "Emiliano Sasal",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "rate-limiter-flexible": "^5.0.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "prisma": "^6.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
