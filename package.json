{
  "name": "rest-api-crud",
  "version": "1.0.0",
  "description": "",
  "main": "api/server.ts",
  "scripts": {
    "dev": "dotenvx run --env-file=.env.development --env-file=.env -- nodemon api/server.ts",
    "docker:dev": "nodemon api/server.ts",
    "build": "dotenvx run --env-file=.env.production --env-file=.env -- npx tsc",
    "start": "node dist/server.ts",
    "test:old": "jest --detectOpenHandles",
    "test:watch": "jest --watchAll  --detectOpenHandles",
    "test": "dotenvx run -f .env.test -- npm run docker:up && npx prisma migrate deploy && jest -i",
    "seed": "prisma db push && ts-node prisma/seed.ts",
    "export:csv": "ts-node prisma/exportCSV.ts",
    "docker:build-dev": "docker compose -f docker-compose.dev.yml up --build -d",
    "docker:up-dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:down-dev": "docker compose -f docker-compose.dev.yml down"
  },
  "keywords": [
    "rest",
    "api",
    "crud"
  ],
  "author": "Emiliano Sasal",
  "license": "ISC",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.5.0",
    "@prisma/client": "^5.12.1",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "rate-limiter-flexible": "^5.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "nodemon": "^3.1.0",
    "prisma": "^5.17.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
