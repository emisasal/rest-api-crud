{
  "engines": {
    "node": ">=20.6.0"
  },
  "name": "rest-api-crud",
  "version": "1.1.0",
  "description": "",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "node --env-file=.env.development --env-file=.env --watch --watch-preserve-output --experimental-specifier-resolution=node -r ts-node/register api/server.ts",
    "build": "tsc",
    "start": "node --env-file=.env.production --env-file=.env dist/server.js",
    "seed": "prisma db push --accept-data-loss && ts-node prisma/seed.ts",
    "export:csv": "ts-node prisma/exportCSV.ts",
    "test:old": "jest --detectOpenHandles",
    "test:watch": "jest --watchAll  --detectOpenHandles",
    "test": "bash -lc 'set -a; [ -f .env ] && source .env; [ -f .env.test ] && source .env.test; set +a; npx prisma migrate deploy && jest -i'",
    "docker:build-dev": "docker compose -f docker-compose.dev.yml build --build-arg BUILD=1",
    "docker:up-dev": "docker compose -f docker-compose.dev.yml up",
    "docker:down-dev": "docker compose -f docker-compose.dev.yml down",
    "docker:build-prod": "docker compose -f docker-compose.prod.yml build --build-arg BUILD=1",
    "docker:up-prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down-prod": "docker compose -f docker-compose.prod.yml down"
  },
  "keywords": [
    "rest",
    "api",
    "crud"
  ],
  "author": "Emiliano Sasal",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "rate-limiter-flexible": "^9.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.19.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "ioredis-mock": "^8.13.1",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^7.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
