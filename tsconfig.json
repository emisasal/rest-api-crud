{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["api/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "forceConsistentCasingInFileNames": true,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["api/**/*.ts"],
  "exclude": [
    "node_modules",
    "./*.ts",
    "api/__mocks__",
    "api/docs",
    "api/**/*.test.ts"
  ]
}
